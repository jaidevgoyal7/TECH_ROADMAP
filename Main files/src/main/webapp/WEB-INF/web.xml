<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <error-page>
        <error-code>404</error-code>
        <location>/404_not_found.jsp</location>
    </error-page>
    
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.tech_roadmap.servlets.Register_servlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.tech_roadmap.servlets.Login_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.tech_roadmap.servlets.Logout_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>edit</servlet-name>
        <servlet-class>com.tech_roadmap.servlets.Edit_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>com.tech_roadmap.servlets.NewPost_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>like</servlet-name>
        <servlet-class>com.tech_roadmap.servlets.Like_servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>like</servlet-name>
        <url-pattern>/Like_servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/NewPost_servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/Edit_servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/Logout_servlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/Login_servlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/Register_servlet</url-pattern>
    </servlet-mapping>
    
</web-app>